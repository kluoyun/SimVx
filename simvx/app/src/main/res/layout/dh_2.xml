<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="170dp"
	android:layout_width="300dp"
	android:id="@+id/dh2RelativeLayout1"
	android:gravity="center">

	<TextView
		android:layout_height="40dp"
		android:layout_width="50dp"
		android:text="账号:"
		android:gravity="center"
		android:textSize="16sp"
		android:id="@+id/dh2TextView1"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="200dp"
		android:ems="10"
		android:layout_toRightOf="@id/dh2TextView1"
		android:id="@+id/dh2EditText1"
		android:textSize="16sp"/>

	<TextView
		android:layout_height="40dp"
		android:layout_width="50dp"
		android:text="密码:"
		android:gravity="center"
		android:textSize="16sp"
		android:layout_below="@id/dh2TextView1"
		android:id="@+id/dh2TextView2"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="200dp"
		android:ems="10"
		android:layout_toRightOf="@id/dh2TextView2"
		android:layout_below="@id/dh2EditText1"
		android:id="@+id/dh2EditText2"
		android:textSize="16sp"/>

	<Button
		android:layout_height="40dp"
		android:layout_width="80dp"
		android:text="登录"
		android:layout_below="@id/dh2TextView2"
		android:id="@+id/dh2Button1"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"/>

	<Button
		android:layout_height="40dp"
		android:layout_width="80dp"
		android:text="注册"
		android:layout_below="@id/dh2EditText2"
		android:layout_toRightOf="@id/dh2Button1"
		android:id="@+id/dh2Button2"
		android:layout_marginLeft="50dp"
		android:layout_marginTop="10dp"/>

</RelativeLayout>

